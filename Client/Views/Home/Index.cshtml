@model Client.Models.Security.AuthorizationVm

@using (Html.BeginForm("Index", "Home", FormMethod.Post))
{

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-t-30 p-b-50">
                <span class="login100-form-title p-b-41">
                    Добро пожаловать
                </span>
                <form class="login100-form validate-form p-b-33 p-t-5">

                    <div class="wrap-input100 validate-input" data-validate="Enter username">
                        <input class="input100" type="text" name="username" placeholder="Имя" asp-for="@Model.Name"/>    
                        <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                    </div>

                    <div class="container-login100-form-btn m-t-32">
                        <button type="submit" class="login100-form-btn" asp-controller="Home" asp-action="Index">
                            Войти
                        </button>
                    </div>

                </form>
            </div>
        </div>
    </div>
}@{Html.EndForm();}